  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/.bin/zoroaster.js",
      "args": [
        "test/spec/integration.js",
        "-b"
      ],
      "env": {
        "BABEL_ENV": "test-debug",
        "ZOROASTER_TIMEOUT": "9999999"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}
